<UserControl x:Class="SongDB.RatingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SongDB"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             >
    <StackPanel Orientation="Horizontal">
        <Button Content="★" Command="{Binding StarClickedCommand}" CommandParameter="1" FontSize="20" Foreground="{Binding Path=Star1Color}"/>
        <Button Content="★" Command="{Binding StarClickedCommand}" CommandParameter="2" FontSize="20" Foreground="{Binding Path=Star2Color}"/>
        <Button Content="★" Command="{Binding StarClickedCommand}" CommandParameter="3" FontSize="20" Foreground="{Binding Path=Star3Color}"/>
        <Button Content="★" Command="{Binding StarClickedCommand}" CommandParameter="4" FontSize="20" Foreground="{Binding Path=Star4Color}"/>
        <Button Content="★" Command="{Binding StarClickedCommand}" CommandParameter="5" FontSize="20" Foreground="{Binding Path=Star5Color}"/>
    </StackPanel>
</UserControl>
