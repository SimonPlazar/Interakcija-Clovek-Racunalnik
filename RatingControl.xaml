<UserControl x:Class="SongDB.RatingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SongDB"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <local:RatingImageConverter x:Key="RatingImageConverter"/>
    </UserControl.Resources>
    <Grid>
        <ItemsControl ItemsSource="{Binding ElementName=ratingControl, Path=RatingValues}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Click="Rate_Click" Width="32" Height="32">
                        <Image Source="{Binding Converter={StaticResource RatingImageConverter}, ConverterParameter={Binding}}" />
                    </Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
